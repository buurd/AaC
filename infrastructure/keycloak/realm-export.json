{
  "realm": "webshop-realm",
  "enabled": true,
  "registrationAllowed": true,
  "roles": {
    "realm": [
      {
        "name": "product-manager",
        "description": "Can manage products"
      },
      {
        "name": "warehouse-staff",
        "description": "Can manage inventory"
      },
      {
        "name": "order-manager",
        "description": "Can manage orders"
      },
      {
        "name": "product-sync",
        "description": "Can sync products"
      },
      {
        "name": "stock-sync",
        "description": "Can sync stock"
      },
      {
        "name": "stock-reserve",
        "description": "Can reserve stock"
      },
      {
        "name": "order-history",
        "description": "Can view order history"
      },
      {
        "name": "order-fulfillment",
        "description": "Can trigger order fulfillment"
      }
    ]
  },
  "users": [
    {
      "username": "manager",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "password"
        }
      ],
      "realmRoles": [ "product-manager" ]
    },
    {
      "username": "staff",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "password"
        }
      ],
      "realmRoles": [ "warehouse-staff" ]
    },
    {
      "username": "p-user",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "p-user"
        }
      ],
      "realmRoles": [ "product-manager" ]
    },
    {
      "username": "w-user",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "w-user"
        }
      ],
      "realmRoles": [ "warehouse-staff" ]
    },
    {
      "username": "o-user",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "o-user"
        }
      ],
      "realmRoles": [ "order-manager" ]
    },
    {
      "username": "service-account-pm-client",
      "enabled": true,
      "serviceAccountClientId": "pm-client",
      "realmRoles": [ "product-sync" ]
    },
    {
      "username": "service-account-warehouse-client",
      "enabled": true,
      "serviceAccountClientId": "warehouse-client",
      "realmRoles": [ "stock-sync" ]
    },
    {
      "username": "service-account-order-client",
      "enabled": true,
      "serviceAccountClientId": "order-client",
      "realmRoles": [ "stock-reserve", "order-fulfillment" ]
    },
    {
      "username": "service-account-webshop-backend-client",
      "enabled": true,
      "serviceAccountClientId": "webshop-backend-client",
      "realmRoles": [ "order-history" ]
    }
  ],
  "clients": [
    {
      "clientId": "webshop-client",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "https://localhost:8443/*",
        "https://reverse-proxy:8443/*",
        "*"
      ],
      "webOrigins": [ "*" ]
    },
    {
      "clientId": "webshop-backend-client",
      "enabled": true,
      "serviceAccountsEnabled": true,
      "secret": "webshop-backend-secret",
      "clientAuthenticatorType": "client-secret"
    },
    {
      "clientId": "pm-client",
      "enabled": true,
      "serviceAccountsEnabled": true,
      "secret": "pm-secret",
      "clientAuthenticatorType": "client-secret"
    },
    {
      "clientId": "warehouse-client",
      "enabled": true,
      "serviceAccountsEnabled": true,
      "secret": "warehouse-secret",
      "clientAuthenticatorType": "client-secret"
    },
    {
      "clientId": "order-client",
      "enabled": true,
      "serviceAccountsEnabled": true,
      "secret": "order-secret",
      "clientAuthenticatorType": "client-secret"
    }
  ]
}
