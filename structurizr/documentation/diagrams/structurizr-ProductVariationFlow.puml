person "==Product Manager\n<size:16>[Person]</size>\n\nA manager of products" <<Element-RWxlbWVudCxQZXJzb24=>> as ProductManager

rectangle "Product Management System\n<size:16>[Software System]</size>" <<Boundary-UHJvZHVjdCBNYW5hZ2VtZW50IFN5c3RlbQ==>> {
  rectangle "PM WebServer\n<size:16>[Container]</size>" <<Boundary-UE0gV2ViU2VydmVy>> {
    rectangle "==ProductController\n<size:16>[Component]</size>\n\nHandles product management (CRUD)." <<Element-RWxlbWVudCxDb21wb25lbnQ=>> as ProductManagementSystem.PMWebServer.ProductController
    rectangle "==ProductService\n<size:16>[Component]</size>\n\nHandles business logic and sync." <<Element-RWxlbWVudCxDb21wb25lbnQsU2VydmljZQ==>> as ProductManagementSystem.PMWebServer.ProductService
    rectangle "==ProductRepository\n<size:16>[Component]</size>\n\nHandles data access for products." <<Element-RWxlbWVudCxDb21wb25lbnQsUmVwb3NpdG9yeQ==>> as ProductManagementSystem.PMWebServer.ProductRepository
  }

}

person "==Product Manager\n<size:16>[Person]</size>\n\nA manager of products" <<Element-RWxlbWVudCxQZXJzb24=>> as ProductManager
rectangle "==Webshop WebServer\n<size:16>[Container]</size>\n\nThe web server." <<Element-RWxlbWVudCxDb250YWluZXIsV2ViIFNlcnZlcg==>> as Webshop.WebshopWebServer
rectangle "==Warehouse WebServer\n<size:16>[Container]</size>\n\nThe web server." <<Element-RWxlbWVudCxDb250YWluZXIsV2ViIFNlcnZlcg==>> as WarehouseService.WarehouseWebServer

ProductManager --> ProductManagementSystem.PMWebServer.ProductController <<Relationship-UmVsYXRpb25zaGlw>> : "1: 1. Requests generation of variants"
ProductManagementSystem.PMWebServer.ProductController --> ProductManagementSystem.PMWebServer.ProductService <<Relationship-UmVsYXRpb25zaGlw>> : "2: 2. Generates variants"
ProductManagementSystem.PMWebServer.ProductService --> ProductManagementSystem.PMWebServer.ProductRepository <<Relationship-UmVsYXRpb25zaGlw>> : "3: 3. Saves variants to DB"
ProductManagementSystem.PMWebServer.ProductService --> Webshop.WebshopWebServer <<Relationship-UmVsYXRpb25zaGlw>> : "4: 4. Syncs variants to Webshop"
ProductManagementSystem.PMWebServer.ProductService --> WarehouseService.WarehouseWebServer <<Relationship-UmVsYXRpb25zaGlw>> : "5: 5. Syncs variants to Warehouse"

@enduml